<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:elevation="1dp">
    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_pr"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="50dp"
        android:src="@drawable/profile"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="피식충전소"
            android:textSize="15dp"
            android:textColor="#000"/>


            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_check_24"/>



        </LinearLayout>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2일전"
            android:textSize="10dp"
            android:textColor="#939393"/>
    </LinearLayout>

</LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="티나도 너무티난 배달앱 리뷰 주작"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20dp"

        />


    <ImageView
        android:id="@+id/img_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/banner"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="딱 걸린 배달앱 리뷰 주작.jpg"
        android:layout_margin="10dp"
        android:textColor="#000"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#939393"
        android:layout_margin="5dp"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imgv_share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_share_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgv_share"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/imgv_share"
                android:text="공유하기"
                android:textSize="15dp" />
        </RelativeLayout>      <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
            >

            <ImageView
                android:id="@+id/imgv_like"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_favorite_24"
                android:layout_centerInParent="true"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgv_like"
            android:layout_toRightOf="@+id/imgv_like"
            android:text="좋아요"
            android:textSize="15dp" />
        </RelativeLayout>




    </LinearLayout>


</LinearLayout>
</androidx.cardview.widget.CardView>